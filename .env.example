# =========================
# Server Configuration
# =========================
PORT=9000                # Port on which the Node.js server runs
NODE_ENV=development     # Environment: development | production | test

# =========================
# Database Configuration
# =========================
MONGO_URL=mongodb://localhost:27017/app_db   # MongoDB connection string

# =========================
# JWT Authentication
# =========================
JWT_SECRET=your_jwt_secret_key               # Secret for signing JWT access tokens
JWT_REFRESH=your_jwt_refresh_secret_key      # Secret for signing JWT refresh tokens

# =========================
# Email Service
# =========================
SENDER_EMAIL=your_email@example.com          # Email address used to send system mails
SENDER_PASS=your_email_password              # Password or app-specific token for email

# =========================
# Google OAuth
# =========================
GOOGLE_CLIENT_ID=your_google_client_id       # Google OAuth client ID
GOOGLE_CLIENT_SECRET=your_google_client_secret # Google OAuth client secret
CALLBACK_URL_USER=http://localhost:9000/auth/google/callback/user   # OAuth callback for users
CALLBACK_URL_TUTOR=http://localhost:9000/auth/google/callback/tutor # OAuth callback for tutors

# =========================
# Client URLs
# =========================
CLIENT_URL=http://localhost:3000             # Primary frontend client URL
CLIENT_URL_2=http://localhost:3001           # Secondary frontend client URL (if any)

# =========================
# Token Names
# =========================
USER_ACCESS_TOKEN_NAME=user_access_token     # Cookie name for user access token
TUTOR_ACCESS_TOKEN_NAME=tutor_access_token   # Cookie name for tutor access token
ADMIN_ACCESS_TOKEN_NAME=admin_access_token   # Cookie name for admin access token
USER_REFRESH_TOKEN_NAME=user_refresh_token   # Cookie name for user refresh token
TUTOR_REFRESH_TOKEN_NAME=tutor_refresh_token # Cookie name for tutor refresh token
ADMIN_REFRESH_TOKEN_NAME=admin_refresh_token # Cookie name for admin refresh token

# =========================
# Payment Gateway (Razorpay)
# =========================
RAZORPAY_KEY_ID=your_razorpay_key_id         # Razorpay API key ID
RAZORPAY_SECRET_KEY=your_razorpay_secret_key # Razorpay API secret key

# =========================
# Admin Configuration
# =========================
ADMIN_ID=admin_unique_identifier             # Unique identifier for admin user
